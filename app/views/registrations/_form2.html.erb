<%= form_for @form, html: {class: 'reg_form'} do |f|  %>
	<%= render 'shared/error_messages' %>
	<%= f.label :title %>
	<%= f.select :title, options_for_select([['Mr.','Mr.'], ['Ms.', 'Ms.'], ['Mrs.', 'Mrs.'], ['Miss.', 'Miss.'], ['Dr.', 'Dr.'], ['Prof.', 'Prof.']]) %>

	<%= f.label :firstName %>
	<%= f.text_field :firstName, class: 'details'%>

	<%= f.label :lastName, "Last name" %>
	<%= f.text_field :lastName, class: 'details' %>

	<%= f.label :passport, "Passport number" %>
	<%= f.text_field :passport,class: 'details' %>

	<%= f.label :country, "Country" %>
	<%= f.country_select :country, class: 'details', prompt: "Select country" %>

	<%= f.label :citizenship %>
	<%= f.text_field :citizenship, class: 'details' %>

	<%= f.label :email %>
	<%= f.email_field :email, class: 'details' %>
	
	<%= f.label :institutionalAffiliation, "Institutional affiliation" %>
	<%= f.text_field :institutionalAffiliation, class: 'details' %>

	<%= f.label :accommodationType, "I would like to be accommodated in" %><br />
	<%= f.radio_button :accommodationType, "Single Room" %>
	<%= f.label :accommodationType_single_room, "Single Room", class: 'radios_checks_label' %><br />
	
	<%= f.radio_button :accommodationType, "Twin Room" %>
	<%= f.label :accommodationType_twin_room, "Twin Room", class: 'radios_checks_label' %><br />
	<div id="share_details">
		Please provide the name of participant sharing, if known, with <br />
		<%= f.text_field :twin_share_with %> (Request only)<br/>
	</div>

	<%= f.radio_button :accommodationType, "Double Room" %>
	<%= f.label :accommodationType_double_room, "Double Room", class: 'radios_checks_label' %><br />
	<div id="share_details">
		<%= f.label :doubleRoomShare, "I am planning to be accompanied by" %>
		<%= f.number_field :accompaniedBy, id: "share_number" %>
		persons	<br />
		Please provide the name of accompanying you plan to share the room with:<br />
		<%= f.label :spouse_name, "Name of spouse" %>
		<%= f.text_field :spouse_name, class: 'details' %>
		<%= f.label :spouse_passport, "Passport number" %>
		<%= f.text_field :spouse_passport, class: 'details' %>
		<%= f.label :spouse_country, "Country" %>
		<%= f.country_select :spouse_country, class: 'details', prompt: "Select country" %>
	</div>

	<%= f.radio_button :accommodationType, "No Accomodation" %>
	<%= f.label :accommodationType_no_accomodation, "No Accomodation", class: 'radios_checks_label' %><br />

	<div style="font-weight: bold; margin-top: 10px; margin-bottom: 5px;">I would like to have:</div>
	<%= f.check_box :presentationPoster %> 
	<%= f.label(:presentationPoster, "Poster presentation", class: 'radios_checks_label') %><br />
	<%= f.check_box :presentationOral %> 
	<%= f.label(:presentationOral, "Oral presentation", class: 'radios_checks_label') %><br />

	<div>I would need extra nights before June 21st from:</div>
	<%= f.date_field :extraNightsBefoe %>

	<div>I would need extra nights after June 26th:</div>
	<%= f.date_field :extraNightsAfter %>

	<div style="font-weight: bold;">I would like to participate in the following activities / tours:</div>
	<div style="margin-top: 10px; margin-bottom: 5px;">1. Jerusalem & Beth Lehem tour:</div>
	
	<%= f.radio_button :jerusalem_tour, "Monday, June 22, 2015" %>
	<%= f.label :jerusalem_tour_Monday__June_22__2015, "Monday, June 22, 2015", class: 'radios_checks_label' %><br />

	<%= f.radio_button :jerusalem_tour, "Friday, June 26, 2015" %>
	<%= f.label :jerusalem_tour_Friday__June_26__2015, "Friday, June 26, 2015", class: 'radios_checks_label' %><br />
	
	<%= f.label :jerusalem_participants, "Number of participants" %>
	<%= f.number_field :jerusalem_participants, id: "share_number" %>

	<div style="margin-top: 10px; margin-bottom: 5px;">2. Dead Sea & Masada tour:</div>

	<%= f.radio_button :deadsea_tour, "Tuesday, June 23, 2015" %>
	<%= f.label :deadsea_tour_Tuesday__June_23__2015, "Tuesday, June 23, 2015", class: 'radios_checks_label' %><br />

	<%= f.radio_button :deadsea_tour, "Friday, June 26, 2015" %>
	<%= f.label :deadsea_tour_Friday__June_26__2015, "Friday, June 26, 2015", class: 'radios_checks_label' %><br />

	<%= f.radio_button :deadsea_tour, "Saturday, June 27, 2015" %>
	<%= f.label :deadsea_tour_Saturday__June_27__2015, "Saturday, June 27, 2015", class: 'radios_checks_label' %><br />

	<%= f.label :deadsea_participants, "Number of participants" %>
	<%= f.number_field :deadsea_participants, id: "share_number" %>

	<div style="margin-top: 10px; margin-bottom: 5px;">3. Nazareth & Sea of Galilee tour:</div>

	<%= f.radio_button :nazareth_tour, "Wednesday, June 24, 2015" %>
	<%= f.label :nazareth_tour_Wednesday__June_24__2015, "Wednesday, June 24, 2015", class: 'radios_checks_label' %><br />

	<%= f.radio_button :nazareth_tour, "Friday, June 26, 2015" %>
	<%= f.label :nazareth_tour_Friday__June_26__2015, "Friday, June 26, 2015", class: 'radios_checks_label' %><br />

	<%= f.radio_button :nazareth_tour, "Saturday, June 27, 2015" %>
	<%= f.label :nazareth_tour_Saturday__June_27__2015, "Saturday, June 27, 2015", class: 'radios_checks_label' %><br />

	<%= f.label :nazareth_participants, "Number of participants" %>
	<%= f.number_field :nazareth_participants, id: "share_number" %>


	<div style="margin-top: 10px; margin-bottom: 5px;">4. Caesarea, Acre & Rosh HaNikra tour:</div>

	<%= f.radio_button :caesarea, "Thursday, June 25, 2015" %>
	<%= f.label :caesarea_Thursday__June_25__2015, "Thursday, June 25, 2015", class: 'radios_checks_label' %><br />

	<%= f.radio_button :caesarea, "Friday, June 26, 2015" %>
	<%= f.label :caesarea_Friday__June_26__2015, "Friday, June 26, 2015", class: 'radios_checks_label' %><br />

	<%= f.radio_button :caesarea, "Saturday, June 27, 2015" %>
	<%= f.label :caesarea_Saturday__June_27__2015, "Saturday, June 27, 2015", class: 'radios_checks_label' %><br />

	<%= f.label :caesarea_participants, "Number of participants" %>
	<%= f.number_field :caesarea_participants, id: "share_number" %>

	<br />
	<%= f.label :specialRequests, "Special requests:" %>
	<%= f.text_area :specialRequests, size: "95x10" %><br />
	<%= f.submit "Submit my registration!", class: "btn btn-large" %>


	<div style="font-weight:bold; padding-top: 10px; font-size: 1.2em">
		For more information or help, you can contact by email to Aviation-Links representatives:<br />
	</div>
	<div style="margin-left: 10px; margin-top: 5px; font-size: 1.05em; line-height: 150%">
		Mrs. Galit Albocher: galital@aviation-links.co.il<br />
		Mrs. Nurit Nevet: nurit.nevet@aviation-links.co.il
	</div>
<% end %>